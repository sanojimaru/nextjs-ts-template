{
  "extends": "@tsconfig/node16-strictest/tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "outDir": "build",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
